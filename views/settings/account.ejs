/* Notifications Styles (Bulma-style) */
.notification {
  background-color: #f5f5f5;
  border-radius: 4px;
  position: relative;
  padding: 1.25rem 2.5rem 1.25rem 1.5rem;
  color: currentColor;
}

.notification a:not(.button):not(.dropdown-item) {
  color: currentColor;
  text-decoration: underline;
}

.notification strong {
  color: currentColor;
}

.notification code,
.notification pre {
  background: #fff;
}

.notification pre code {
  background: 0 0;
}

.notification > .delete {
  right: 0.5rem;
  position: absolute;
  top: 0.5rem;
}

.notification .content,
.notification .subtitle,
.notification .title {
  color: currentColor;
}

.notification.is-white {
  background-color: #fff;
  color: #0a0a0a;
}

.notification.is-black {
  background-color: #0a0a0a;
  color: #fff;
}

.notification.is-light {
  background-color: #f5f5f5;
