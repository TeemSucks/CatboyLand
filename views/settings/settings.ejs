/* Style for the text label next to the custom Choose File button */
.file-label {
  color: #fff;
  display: inline-block;
  margin-right: 10px;
}

.file-name {
  color: #fff;
  display: inline-block;
  margin-top: 10px;
}

input[type="file"] + label {
  background-color: #555;
  color: #fff;
  border: none;
  padding: 10px 20px;
  cursor: pointer;
  margin-top: 10px;
  display: inline-block;
  position: relative;
}

input[type="file"] + label:hover {
  background-color: #777;
}

input[type="file"] + label input[type="file"] {
  display: none;
}

input[type="file"] + label .file-label {
  color: #fff;
  display: inline-block;
  margin-right: 10px;
}

input[type="file"] + label .file-name {
  color: #fff;
  display: inline-block;
  margin-top: 10px;
}

