  text-align: center;
}

.sidebar ul li a {
  display: block; /* Ensure each link takes up the full width */
  color: #fff;
  text-decoration: none;
  background-color: #333; /* Darken the background color */
  padding: 10px 15px; /* Increase padding for better appearance */
