<!-- views/friends/list.ejs -->
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>CatboyLand - Friends List</title>
</head>
<body>
    <h1>Friends List</h1>

    <% if (friends.length > 0) { %>
        <ul>
            <% friends.forEach(friend => { %>
                <li>
                  <img src="/cdn/uploads/<%= friend.friend.profilePicture %>" alt="Profile picture" width="50px" height="50px"></img>
                    <span><%= friend.friend.username %></span>
                </li>
            <% }); %>
        </ul>
    <% } else { %>
        <p>No friends</p>
    <% } %>
</body>
</html>
